{
	"parser": "babel-eslint",
	"rules": {
		"camelcase": 2,
		"comma-dangle": [2, "never"],
		"comma-spacing": 2,
		"curly": [2, "all"],
		"dot-notation": [2, {"allowKeywords": true}],
		"eol-last": 2,
		"key-spacing": [2, {"beforeColon": false, "afterColon": true}],
		"new-parens": 2,
		"no-alert": 2,
		"no-array-constructor": 2,
		"no-caller": 2,
		"no-catch-shadow": 2,
		"no-debugger": 2,
		"no-eval": 2,
		"no-extra-bind": 2,
		"no-implied-eval": 2,
		"no-inner-declarations": 2,
		"no-labels": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-spaces": 2,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-new-object": 2,
		"no-new-wrappers": 2,
		"no-octal-escape": 2,
		"no-proto": 2,
		"no-return-assign": 2,
		"no-spaced-func": 2,
		"no-undef": [2, {"typeof": true}],
		"no-undef-init": 2,
		"no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
		"no-use-before-define": [2, { "functions": false }],
		"no-with": 2,
		"quotes": [2, "single", "avoid-escape"],
		"semi": 2,
		"semi-spacing": [2, {"before": false, "after": true}],
		"space-infix-ops": 2,
		"space-unary-ops": [2, {"words": true, "nonwords": false}],
		"yoda": [2, "never"]
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"globals": {
		"Promise": true
	}
}
